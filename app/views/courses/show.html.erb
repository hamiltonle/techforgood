    <div class="row background_gray slightly_padded">
      <div class="course_intro width-720">
      <h4 class= "text-blue7">Syllabus: <%= @course.title %> </h4>
        <div class="course_syllabus">
          <div class="">
            <% lesson_num = 1 %>

            <% @course.lessons.reverse.each do |lesson| %>
              <div class="padding-left-20 body-gray syllabus-item">
                <div>
                <h4 class="no-bottom-margin text-16px"><em><%= lesson_num %>) <%= lesson.title %></em></h4>
                <p class="no-y-margin text-smooth"> <%= lesson.description %></p>
                </div>
                <div>
                <i class="fa fa-clock-o" aria-hidden="true"></i> <p class="text-right"><%=lesson.minutes %> minutes</p>
                </div>
              </div>

              <% lesson_num += 1 %>
            <% end %>

            <div class="slightly_padded text-center">
              <%= render :partial => 'enrollments/form', locals: {course: @course, enrollment: Enrollment.new } %>
            </div>
          </div>
        </div>
      </div>
    </div>

